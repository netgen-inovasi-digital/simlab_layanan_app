#--------------------------------------------------------------------
# Example Environment Configuration file
#
# This file can be used as a starting point for your own
# custom .env files, and contains most of the possible settings
# available in a default install.
#
# Copy this file to .env and update the values to match your environment.
#
# IMPORTANT: Never commit your .env file to version control
# as it may contain sensitive information.
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

# The base URL of your application.
# Update this to match your local development URL
app.baseURL = 'http://localhost/netx/'
app.indexPage = ''

# Set timezone according to your location
app.timezone = 'Asia/Jakarta'

# Uncomment and set if needed
# app.forceGlobalSecureRequests = false
# app.CSPEnabled = false

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

# Update these settings to match your database configuration
database.default.hostname = localhost
database.default.database = your_database_name
database.default.username = your_username
database.default.password = your_password
database.default.port = 3306
database.default.DBDriver = MySQLi
# database.default.DBPrefix =
# database.default.charset = utf8mb4
# database.default.DBCollat = utf8mb4_unicode_ci

# Test Database Configuration (optional)
# database.tests.hostname = localhost
# database.tests.database = your_test_database
# database.tests.username = your_username
# database.tests.password = your_password
# database.tests.DBDriver = MySQLi
# database.tests.port = 3306

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------

# Generate a secure encryption key using: php spark key:generate
# Or use online generator: https://codeigniter4.github.io/encryption-keys/
encryption.key = your_32_character_encryption_key_here

